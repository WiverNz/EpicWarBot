<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainFragmentColumnNames_TV">
		<item name="android:layout_width">120dp</item>
		<item name="android:layout_column">0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MainFragmentColumn_EditText">
		<!-- <item name="android:layout_width">match_parent</item> -->
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">34dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:hint"></item>
		<item name="android:layout_column">1</item>
	</style>
    <style name="EditText_numberSigned" parent="MainFragmentColumn_EditText">
        <item name="android:inputType">numberSigned</item>
    </style>
    <style name="EditText_numberDecimal" parent="MainFragmentColumn_EditText">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="EditText_date" parent="MainFragmentColumn_EditText">
        <item name="android:inputType">none</item>
    </style>
    <style name="MainFragmentColumnInfo_TV">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_column">2</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
