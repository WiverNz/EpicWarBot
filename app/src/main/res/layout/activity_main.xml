<?xml version="1.0" encoding="utf-8"?><!DOCTYPE ScrollView>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFragment_table_scroll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mf_repeat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/mainTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="2dp"
        android:stretchColumns="*">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainFragmentColumnNames_TV"
                    android:text="@string/VkLogin"/>

                <EditText
                    android:id="@+id/etVkLogin"
                    style="@style/MainFragmentColumn_EditText"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainFragmentColumnNames_TV"
                    android:text="@string/VkPassword"/>

                <EditText
                    android:id="@+id/etVkPassword"
                    style="@style/MainFragmentColumn_EditText"
                    android:inputType="textPassword"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tblPartRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TableLayout
            android:id="@+id/tblButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:stretchColumns="*">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:text=""
                android:textSize="12sp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnConnect"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnDisconnect"
                    android:textSize="12sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnStartService"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnStartService"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btnStopService"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnStopService"
                    android:textSize="12sp"/>
            </TableRow>
        </TableLayout>
    </TableLayout>

</ScrollView>

